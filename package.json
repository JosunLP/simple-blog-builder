{
	"name": "simple-blog-builder",
	"version": "0.0.1",
	"description": "A component library to build up fast blogs with markdown files",
	"main": "index.js",
	"type": "module",
	"directories": {
		"test": "test"
	},
	"scripts": {
		"build": "npx rimraf ./dist/ && npm run updateInfo && npm run lint && npm run build/core",
		"build/core": "tsc -p tsconfig.json",
		"updateInfo": "tsc ./tools/syncInfo.ts --outDir ./tools/ --target esnext --module nodenext && node ./tools/syncInfo.js",
		"lint": "npx eslint --ext .ts . --fix"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/JosunLP/simple-blog-builder.git"
	},
	"keywords": [
		"npm",
		"library",
		"blog",
		"typescript",
		"vue",
		"svelte",
		"angular"
	],
	"author": {
		"name": "Jonas Pfalzgraf",
		"email": "info@josunlp.de"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/JosunLP/simple-blog-builder/issues"
	},
	"homepage": "https://github.com/JosunLP/simple-blog-builder#readme",
	"devDependencies": {
		"@storybook/angular": "^8.0.0",
		"@storybook/react": "^8.0.0",
		"@storybook/svelte": "^8.0.0",
		"@storybook/vue": "^7.6.17",
		"@storybook/web-components": "^8.0.0",
		"@types/aes-js": "^3.1.1",
		"@types/node": "^18.0.6",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.59.1",
		"eslint": "^8.57.0",
		"eslint-plugin-editorconfig": "^4.0.3"
	}
}
